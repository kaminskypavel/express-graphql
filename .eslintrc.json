{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
    },
    "overrides": [
        {
          "files": ["*.graphql"],
          "parser": "@graphql-eslint/eslint-plugin",
          "plugins": ["@graphql-eslint"],
          "rules": {
            "eol-last": "off",
            "prettier/prettier": "off"
          }
        }
      ]
    }